  <script>
    // Example truck availability (you can change this schedule)
    const truckSchedule = {
      "Monday": true,
      "Wednesday": false,
      "Friday": true,
      "Saturday": true
    };

    const daySelect = document.getElementById("day");
    const availabilityDiv = document.getElementById("availability");
    const form = document.getElementById("pickupForm");

    // Show availability when user selects a day
    daySelect.addEventListener("change", function() {
      const selectedDay = this.value;
      if (selectedDay) {
        if (truckSchedule[selectedDay]) {
          availabilityDiv.textContent = "‚úÖ Truck is available on " + selectedDay;
          availabilityDiv.className = "availability available";
        } else {
          availabilityDiv.textContent = "‚ùå No truck available on " + selectedDay + ". Please choose another day.";
          availabilityDiv.className = "availability unavailable";
        }
      } else {
        availabilityDiv.textContent = "";
      }
    });

    // Prevent form submit if no truck available
    form.addEventListener("submit", function(e){
      e.preventDefault();
      const selectedDay = daySelect.value;
      if (!truckSchedule[selectedDay]) {
        alert("No truck available on " + selectedDay + ". Please select another day.");
        return;
      }
      document.getElementById("confirmation").style.display = "block";
      availabilityDiv.textContent = "";
      this.reset();
    });
  </script>
