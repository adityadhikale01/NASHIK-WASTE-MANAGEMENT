  <!-- Leaflet and JS -->
  <script src="https://cdnjs.cloudflare.com/ajax/libs/leaflet/1.9.4/leaflet.js"></script>
  <script>
    // ‚úÖ ICONS
    const truckIcon = L.icon({
      iconUrl: 'image/truck-icon.png',
      iconSize: [40, 40],
      iconAnchor: [20, 40],
      popupAnchor: [0, -40]
    });

    const dustbinIcon = L.icon({
      iconUrl: 'image/dustbin-icon.png',
      iconSize: [30, 30],
      iconAnchor: [15, 30],
      popupAnchor: [0, -30]
    });

    const scrapShopIcon = L.icon({
      iconUrl: 'image/scrapshop-icon.png',
      iconSize: [30, 30],
      iconAnchor: [15, 30],
      popupAnchor: [0, -30]
    });

    // ‚úÖ Initialize map
    const map = L.map('map', {
      center: [19.9975, 73.7898],
      zoom: 13
    });

    L.tileLayer('https://{s}.tile.openstreetmap.org/{z}/{x}/{y}.png', {
      attribution:'&copy; <a href="https://www.openstreetmap.org/">OpenStreetMap</a> contributors'
    }).addTo(map);

    const locations = [
      { coords: [19.995, 73.78], name: "Dustbin 1", type: "Dustbin" },
      { coords: [19.992, 73.785], name: "Dustbin 2", type: "Dustbin" },
      { coords: [20.029098, 73.852004], name: "Dustbin 3", type: "Dustbin" },
      { coords: [20.016916, 73.825348], name: "Dustbin 4", type: "Dustbin" },
      { coords: [20.000, 73.79], name: "Scrap Shop A", type: "Scrap Shop" },
      { coords: [20.003, 73.80], name: "Scrap Shop B", type: "Scrap Shop" }
    ];

    const scrapShops = [];

    locations.forEach(loc => {
      let icon;
      if (loc.type === "Dustbin") icon = dustbinIcon;
      else if (loc.type === "Scrap Shop") {
        icon = scrapShopIcon;
        scrapShops.push(loc);
      }

      L.marker(loc.coords, { icon }).addTo(map)
        .bindPopup(`<b>${loc.name}</b><br>${loc.type}`);
    });

    const shopSelect = document.getElementById('shopSelect');
    scrapShops.forEach(shop => {
      const option = document.createElement('option');
      option.value = shop.name;
      option.textContent = shop.name;
      shopSelect.appendChild(option);
    });

    // ‚úÖ Garbage Truck Marker (animated)
    const truckPath = [
      [19.995, 73.78],
      [19.996, 73.782],
      [19.997, 73.784],
      [19.998, 73.786],
      [19.999, 73.788],
      [20.000, 73.790],
      [19.995, 73.78]
    ];

    const truck = L.marker(truckPath[0], { icon: truckIcon }).addTo(map)
      .bindPopup("üöõ Garbage Truck");

    let i = 0;
    setInterval(() => {
      truck.setLatLng(truckPath[i]);
      i = (i + 1) % truckPath.length;
    }, 2000);

    // ‚úÖ Scrap Sell Submit
    document.getElementById('sellForm').addEventListener('submit', e => {
      e.preventDefault();
      const shop = shopSelect.value;
      const item = document.getElementById('item').value;
      const qty = document.getElementById('quantity').value;
      document.getElementById('status').textContent =
        `Request sent: ${qty} kg of "${item}" to ${shop}. (Connect backend)`;
      e.target.reset();
    });

    // ‚úÖ Distance helper
    function getDistance(lat1, lon1, lat2, lon2) {
      const R = 6371;
      const dLat = (lat2 - lat1) * Math.PI / 180;
      const dLon = (lon2 - lon1) * Math.PI / 180;
      const a = Math.sin(dLat / 2) ** 2 +
        Math.cos(lat1 * Math.PI / 180) * Math.cos(lat2 * Math.PI / 180) *
        Math.sin(dLon / 2) ** 2;
      return R * 2 * Math.atan2(Math.sqrt(a), Math.sqrt(1 - a));
    }

    // ‚úÖ Nearby Dustbins
    document.getElementById('nearbyBtn').addEventListener('click', () => {
      if (!navigator.geolocation) {
        alert("Geolocation is not supported.");
        return;
      }
      navigator.geolocation.getCurrentPosition(pos => {
        const { latitude, longitude } = pos.coords;
        const dustbins = locations.filter(loc => loc.type === "Dustbin");
        const distances = dustbins.map(d => ({
          name: d.name,
          coords: d.coords,
          distance: getDistance(latitude, longitude, d.coords[0], d.coords[1])
        }));
        distances.sort((a, b) => a.distance - b.distance);

        const nearbyList = document.getElementById('nearbyList');
        nearbyList.innerHTML = '';
        distances.forEach((d, i) => {
          const li = document.createElement('li');
          li.textContent = `${d.name} - ${d.distance.toFixed(2)} km away`;
          nearbyList.appendChild(li);

          L.circleMarker(d.coords, {
            radius: 8,
            color: i === 0 ? 'red' : 'blue',
            fillColor: i === 0 ? '#f03' : '#30f',
            fillOpacity: 0.5
          }).addTo(map).bindPopup(`üóë ${d.name}<br>${d.distance.toFixed(2)} km`).openPopup();
        });

        map.setView([latitude, longitude], 14);
        L.marker([latitude, longitude]).addTo(map)
          .bindPopup("üìç Your Location").openPopup();
      }, () => alert("Unable to retrieve your location."));
    });

 
  // Icons (already defined in earlier code)
  const allMarkers = [];  // holds active markers for cleanup
  let truckInterval;      // for controlling truck animation
  let truckMarker;        // actual truck marker

  function clearMap() {
    // Remove all existing markers
    allMarkers.forEach(marker => map.removeLayer(marker));
    allMarkers.length = 0;

    // Stop truck animation if running
    if (truckInterval) clearInterval(truckInterval);
    if (truckMarker) map.removeLayer(truckMarker);
  }

  function showCategory(type) {
    clearMap();

    if (type === 'dustbins') {
      locations.filter(l => l.type === "Dustbin").forEach(loc => {
        const marker = L.marker(loc.coords, { icon: dustbinIcon }).addTo(map)
          .bindPopup(`<b>${loc.name}</b><br>üóëÔ∏è Dustbin`);
        allMarkers.push(marker);
      });
    } else if (type === 'scrapshops') {
      locations.filter(l => l.type === "Scrap Shop").forEach(loc => {
        const marker = L.marker(loc.coords, { icon: scrapShopIcon }).addTo(map)
          .bindPopup(`<b>${loc.name}</b><br>üè≠ Scrap Shop`);
        allMarkers.push(marker);
      });
    } else if (type === 'truck') {
      const truckPath = [
        [19.995, 73.78],
        [19.996, 73.782],
        [19.997, 73.784],
        [19.998, 73.786],
        [19.999, 73.788],
        [20.000, 73.790]
      ];

      let i = 0;
      truckMarker = L.marker(truckPath[0], { icon: truckIcon }).addTo(map)
        .bindPopup("üöõ Garbage Truck");
      allMarkers.push(truckMarker);

      truckInterval = setInterval(() => {
        truckMarker.setLatLng(truckPath[i]);
        i = (i + 1) % truckPath.length;
      }, 2000);
    }
  }
</script>

