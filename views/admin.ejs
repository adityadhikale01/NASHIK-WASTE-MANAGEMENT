<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Admin Dashboard - NWM</title>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.7.2/css/all.min.css">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="icon" href="./image/Waste_Management_logo.svg">
    <style>
        * {
            margin: 0;
            padding: 0;
            box-sizing: border-box;
        }

        body {
            font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
            background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
            min-height: 100vh;
            padding: 20px;
        }

        .admin-container {
            max-width: 1400px;
            margin: 0 auto;
        }

        .admin-header {
            background: white;
            padding: 30px;
            border-radius: 12px;
            box-shadow: 0 8px 24px rgba(0, 0, 0, 0.12);
            margin-bottom: 30px;
            display: flex;
            justify-content: space-between;
            align-items: center;
        }

        .admin-header h1 {
            color: #333;
            margin: 0;
            font-weight: 700;
        }

        .admin-header p {
            color: #28a745;
            margin: 5px 0 0 0;
            font-weight: 500;
        }

        .logout-btn {
            background: #dc3545;
            color: white;
            border: none;
            padding: 10px 20px;
            border-radius: 8px;
            cursor: pointer;
            transition: all 0.3s ease;
        }

        .logout-btn:hover {
            background: #c82333;
            transform: translateY(-2px);
        }

        .tabs-container {
            background: white;
            border-radius: 12px;
            overflow: hidden;
            box-shadow: 0 8px 24px rgba(0, 0, 0, 0.12);
            margin-bottom: 30px;
        }

        .nav-tabs {
            border-bottom: 2px solid #f0f0f0;
        }

        .nav-link {
            color: #666;
            border: none;
            padding: 18px 25px;
            font-weight: 600;
            transition: all 0.3s ease;
            position: relative;
        }

        .nav-link:hover {
            color: #667eea;
            background: #f8f9fa;
        }

        .nav-link.active {
            color: #667eea;
            background: white;
        }

        .nav-link.active::after {
            content: '';
            position: absolute;
            bottom: -2px;
            left: 0;
            right: 0;
            height: 3px;
            background: #667eea;
        }

        .tab-content-wrapper {
            background: white;
            border-radius: 12px;
            padding: 30px;
            box-shadow: 0 8px 24px rgba(0, 0, 0, 0.12);
        }

        .stats-grid {
            display: grid;
            grid-template-columns: repeat(auto-fit, minmax(200px, 1fr));
            gap: 20px;
            margin-bottom: 30px;
        }

        .stat-card {
            background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
            color: white;
            padding: 20px;
            border-radius: 10px;
            text-align: center;
        }

        .stat-card h3 {
            font-size: 32px;
            margin: 10px 0;
            font-weight: 700;
        }

        .stat-card p {
            margin: 0;
            opacity: 0.9;
        }

        .table-responsive {
            overflow-x: auto;
        }

        table {
            width: 100%;
            border-collapse: collapse;
        }

        thead {
            background: #f8f9fa;
            border-bottom: 2px solid #dee2e6;
        }

        th {
            padding: 18px;
            text-align: left;
            font-weight: 600;
            color: #333;
        }

        td {
            padding: 15px 18px;
            border-bottom: 1px solid #dee2e6;
        }

        tbody tr:hover {
            background: #f8f9fa;
        }

        .status-badge {
            display: inline-block;
            padding: 6px 12px;
            border-radius: 20px;
            font-size: 12px;
            font-weight: 600;
        }

        .status-pending {
            background: #fff3cd;
            color: #856404;
        }

        .status-resolved {
            background: #d4edda;
            color: #155724;
        }

        .status-in-progress {
            background: #d1ecf1;
            color: #0c5460;
        }

        .action-buttons {
            display: flex;
            gap: 8px;
        }

        .btn-small {
            padding: 6px 12px;
            border: none;
            border-radius: 6px;
            cursor: pointer;
            font-size: 12px;
            font-weight: 600;
            transition: all 0.3s ease;
        }

        .btn-view {
            background: #0d6efd;
            color: white;
        }

        .btn-view:hover {
            background: #0b5ed7;
        }

        .btn-update {
            background: #28a745;
            color: white;
        }

        .btn-update:hover {
            background: #218838;
        }

        .btn-delete {
            background: #dc3545;
            color: white;
        }

        .btn-delete:hover {
            background: #c82333;
        }

        .modal-backdrop {
            background-color: rgba(0, 0, 0, 0.5) !important;
        }

        .modal-content {
            border-radius: 12px;
            border: none;
            box-shadow: 0 20px 60px rgba(0, 0, 0, 0.3);
        }

        .modal-header {
            background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
            color: white;
            border-bottom: none;
            border-radius: 12px 12px 0 0;
        }

        .modal-header .btn-close {
            filter: brightness(0) invert(1);
        }

        .modal-title {
            font-weight: 700;
        }

        .form-label {
            font-weight: 600;
            color: #333;
            margin-top: 12px;
        }

        .form-control, .form-select {
            border: 1px solid #ddd;
            border-radius: 8px;
            padding: 10px 12px;
        }

        .form-control:focus, .form-select:focus {
            border-color: #667eea;
            box-shadow: 0 0 0 0.2rem rgba(102, 126, 234, 0.25);
        }

        .empty-state {
            text-align: center;
            padding: 60px 20px;
            color: #999;
        }

        .empty-state i {
            font-size: 48px;
            margin-bottom: 20px;
            opacity: 0.5;
        }

        .empty-state p {
            margin: 0;
        }

        .search-filter {
            margin-bottom: 20px;
            display: flex;
            gap: 15px;
            flex-wrap: wrap;
        }

        .search-filter input,
        .search-filter select {
            flex: 1;
            min-width: 200px;
            padding: 10px 15px;
            border: 1px solid #ddd;
            border-radius: 8px;
            font-size: 14px;
        }

        .filter-btn {
            background: #667eea;
            color: white;
            border: none;
            padding: 10px 20px;
            border-radius: 8px;
            cursor: pointer;
            font-weight: 600;
            transition: all 0.3s ease;
        }

        .filter-btn:hover {
            background: #764ba2;
        }

        @media (max-width: 768px) {
            .admin-header {
                flex-direction: column;
                text-align: center;
                gap: 15px;
            }

            .stats-grid {
                grid-template-columns: 1fr;
            }

            .search-filter {
                flex-direction: column;
            }

            .search-filter input,
            .search-filter select {
                width: 100%;
            }

            .action-buttons {
                flex-direction: column;
            }
        }
    </style>
</head>
<body>
    <div class="admin-container">
        <!-- Admin Header -->
        <div class="admin-header">
            <div>
                <h1><i class="fas fa-crown"></i> Admin Dashboard</h1>
                <p>Manage complaints and scheduled pickups</p>
            </div>
            <a href="/" class="logout-btn"><i class="fas fa-sign-out-alt"></i> Back to Home</a>
        </div>

        <!-- Tabs -->
        <div class="tabs-container">
            <ul class="nav nav-tabs" id="adminTabs" role="tablist">
                <li class="nav-item" role="presentation">
                    <button class="nav-link active" id="complaints-tab" data-bs-toggle="tab" data-bs-target="#complaints" type="button" role="tab">
                        <i class="fas fa-exclamation-circle"></i> Complaints
                    </button>
                </li>
                <li class="nav-item" role="presentation">
                    <button class="nav-link" id="pickups-tab" data-bs-toggle="tab" data-bs-target="#pickups" type="button" role="tab">
                        <i class="fas fa-truck"></i> Scheduled Pickups
                    </button>
                </li>
            </ul>
        </div>

        <!-- Tab Content -->
        <div class="tab-content" id="adminTabContent">
            <!-- Complaints Tab -->
            <div class="tab-pane fade show active" id="complaints" role="tabpanel">
                <div class="tab-content-wrapper">
                    <!-- Stats -->
                    <div class="stats-grid">
                        <div class="stat-card">
                            <i class="fas fa-list"></i>
                            <h3 id="totalComplaints">0</h3>
                            <p>Total Complaints</p>
                        </div>
                        <div class="stat-card">
                            <i class="fas fa-clock"></i>
                            <h3 id="pendingComplaints">0</h3>
                            <p>Pending</p>
                        </div>
                        <div class="stat-card">
                            <i class="fas fa-hourglass-half"></i>
                            <h3 id="inProgressComplaints">0</h3>
                            <p>In Progress</p>
                        </div>
                        <div class="stat-card">
                            <i class="fas fa-check-circle"></i>
                            <h3 id="resolvedComplaints">0</h3>
                            <p>Resolved</p>
                        </div>
                    </div>

                    <!-- Filter -->
                    <div class="search-filter">
                        <input type="text" id="complaintSearch" placeholder="Search by name, email, or location...">
                        <select id="complaintStatusFilter">
                            <option value="">All Status</option>
                            <option value="Pending">Pending</option>
                            <option value="In Progress">In Progress</option>
                            <option value="Resolved">Resolved</option>
                        </select>
                        <button class="filter-btn" onclick="filterComplaints()"><i class="fas fa-search"></i> Filter</button>
                    </div>

                    <!-- Complaints Table -->
                    <div class="table-responsive">
                        <table id="complaintsTable">
                            <thead>
                                <tr>
                                    <th>ID</th>
                                    <th>Name</th>
                                    <th>Email</th>
                                    <th>Location</th>
                                    <th>Complaint Type</th>
                                    <th>Date</th>
                                    <th>Status</th>
                                    <th>Actions</th>
                                </tr>
                            </thead>
                            <tbody id="complaintsList">
                                <tr>
                                    <td colspan="8" class="text-center text-muted py-5">
                                        <i class="fas fa-inbox" style="font-size: 48px; opacity: 0.3;"></i>
                                        <p style="margin-top: 10px;">No complaints available</p>
                                    </td>
                                </tr>
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>

            <!-- Pickups Tab -->
            <div class="tab-pane fade" id="pickups" role="tabpanel">
                <div class="tab-content-wrapper">
                    <!-- Stats -->
                    <div class="stats-grid">
                        <div class="stat-card">
                            <i class="fas fa-list"></i>
                            <h3 id="totalPickups">0</h3>
                            <p>Total Pickups</p>
                        </div>
                        <div class="stat-card">
                            <i class="fas fa-clock"></i>
                            <h3 id="pendingPickups">0</h3>
                            <p>Pending</p>
                        </div>
                        <div class="stat-card">
                            <i class="fas fa-hourglass-half"></i>
                            <h3 id="inProgressPickups">0</h3>
                            <p>In Progress</p>
                        </div>
                        <div class="stat-card">
                            <i class="fas fa-check-circle"></i>
                            <h3 id="completedPickups">0</h3>
                            <p>Completed</p>
                        </div>
                    </div>

                    <!-- Filter -->
                    <div class="search-filter">
                        <input type="text" id="pickupSearch" placeholder="Search by name or address...">
                        <select id="pickupStatusFilter">
                            <option value="">All Status</option>
                            <option value="Pending">Pending</option>
                            <option value="In Progress">In Progress</option>
                            <option value="Completed">Completed</option>
                        </select>
                        <button class="filter-btn" onclick="filterPickups()"><i class="fas fa-search"></i> Filter</button>
                    </div>

                    <!-- Pickups Table -->
                    <div class="table-responsive">
                        <table id="pickupsTable">
                            <thead>
                                <tr>
                                    <th>ID</th>
                                    <th>Name</th>
                                    <th>Address</th>
                                    <th>Waste Item</th>
                                    <th>Preferred Day</th>
                                    <th>Date Requested</th>
                                    <th>Status</th>
                                    <th>Actions</th>
                                </tr>
                            </thead>
                            <tbody id="pickupsList">
                                <tr>
                                    <td colspan="8" class="text-center text-muted py-5">
                                        <i class="fas fa-inbox" style="font-size: 48px; opacity: 0.3;"></i>
                                        <p style="margin-top: 10px;">No pickups available</p>
                                    </td>
                                </tr>
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- View Complaint Modal -->
    <div class="modal fade" id="viewComplaintModal" tabindex="-1">
        <div class="modal-dialog modal-lg">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title">Complaint Details</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
                </div>
                <div class="modal-body">
                    <div id="complaintDetails"></div>
                </div>
            </div>
        </div>
    </div>

    <!-- Edit Complaint Modal -->
    <div class="modal fade" id="editComplaintModal" tabindex="-1">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title">Update Complaint Status</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
                </div>
                <div class="modal-body">
                    <form id="editComplaintForm">
                        <input type="hidden" id="complaintId">
                        <div class="mb-3">
                            <label class="form-label">Status</label>
                            <select id="complaintStatus" class="form-select">
                                <option value="Pending">Pending</option>
                                <option value="In Progress">In Progress</option>
                                <option value="Resolved">Resolved</option>
                            </select>
                        </div>
                        <div class="mb-3">
                            <label class="form-label">Admin Notes</label>
                            <textarea id="complaintNotes" class="form-control" rows="4" placeholder="Add any notes..."></textarea>
                        </div>
                    </form>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                    <button type="button" class="btn btn-primary" onclick="updateComplaint()">Update</button>
                </div>
            </div>
        </div>
    </div>

    <!-- View Pickup Modal -->
    <div class="modal fade" id="viewPickupModal" tabindex="-1">
        <div class="modal-dialog modal-lg">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title">Pickup Details</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
                </div>
                <div class="modal-body">
                    <div id="pickupDetails"></div>
                </div>
            </div>
        </div>
    </div>

    <!-- Edit Pickup Modal -->
    <div class="modal fade" id="editPickupModal" tabindex="-1">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title">Update Pickup Status</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
                </div>
                <div class="modal-body">
                    <form id="editPickupForm">
                        <input type="hidden" id="pickupId">
                        <div class="mb-3">
                            <label class="form-label">Status</label>
                            <select id="pickupStatus" class="form-select">
                                <option value="Pending">Pending</option>
                                <option value="In Progress">In Progress</option>
                                <option value="Completed">Completed</option>
                            </select>
                        </div>
                        <div class="mb-3">
                            <label class="form-label">Driver Notes</label>
                            <textarea id="pickupNotes" class="form-control" rows="4" placeholder="Add any notes..."></textarea>
                        </div>
                    </form>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                    <button type="button" class="btn btn-primary" onclick="updatePickup()">Update</button>
                </div>
            </div>
        </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    <script>
        let complaintsData = [];
        let pickupsData = [];

        // Load complaints on page load
        window.addEventListener('DOMContentLoaded', function() {
            loadComplaints();
            loadPickups();
        });

        // Load Complaints
        function loadComplaints() {
            fetch('/api/complaints')
                .then(res => res.json())
                .then(data => {
                    complaintsData = data;
                    displayComplaints(complaintsData);
                    updateComplaintsStats();
                })
                .catch(err => {
                    console.error('Error loading complaints:', err);
                    displayNoComplaints();
                });
        }

        // Display Complaints
        function displayComplaints(complaints) {
            const tbody = document.getElementById('complaintsList');
            if (complaints.length === 0) {
                displayNoComplaints();
                return;
            }

            tbody.innerHTML = complaints.map(complaint => `
                <tr>
                    <td>#${complaint.id}</td>
                    <td>${complaint.name}</td>
                    <td>${complaint.email}</td>
                    <td>${complaint.location}</td>
                    <td>${complaint.type}</td>
                    <td>${new Date(complaint.created_at).toLocaleDateString()}</td>
                    <td><span class="status-badge status-${complaint.status.toLowerCase().replace(' ', '-')}">${complaint.status || 'Pending'}</span></td>
                    <td>
                        <div class="action-buttons">
                            <button class="btn-small btn-view" onclick="viewComplaint(${complaint.id})"><i class="fas fa-eye"></i> View</button>
                            <button class="btn-small btn-update" onclick="editComplaint(${complaint.id})"><i class="fas fa-edit"></i> Update</button>
                            <button class="btn-small btn-delete" onclick="deleteComplaint(${complaint.id})"><i class="fas fa-trash"></i> Delete</button>
                        </div>
                    </td>
                </tr>
            `).join('');
        }

        function displayNoComplaints() {
            document.getElementById('complaintsList').innerHTML = `
                <tr>
                    <td colspan="8" class="text-center text-muted py-5">
                        <i class="fas fa-inbox" style="font-size: 48px; opacity: 0.3;"></i>
                        <p style="margin-top: 10px;">No complaints available</p>
                    </td>
                </tr>
            `;
        }

        // View Complaint
        function viewComplaint(id) {
            const complaint = complaintsData.find(c => c.id === id);
            if (!complaint) return;

            const details = `
                <div class="row mb-3">
                    <div class="col-md-6">
                        <strong>Name:</strong>
                        <p>${complaint.name}</p>
                    </div>
                    <div class="col-md-6">
                        <strong>Email:</strong>
                        <p>${complaint.email}</p>
                    </div>
                </div>
                <div class="row mb-3">
                    <div class="col-md-6">
                        <strong>Location:</strong>
                        <p>${complaint.location}</p>
                    </div>
                    <div class="col-md-6">
                        <strong>Complaint Type:</strong>
                        <p>${complaint.type}</p>
                    </div>
                </div>
                <div class="row mb-3">
                    <div class="col-md-6">
                        <strong>Date Submitted:</strong>
                        <p>${new Date(complaint.created_at).toLocaleString()}</p>
                    </div>
                    <div class="col-md-6">
                        <strong>Status:</strong>
                        <p><span class="status-badge status-${complaint.status.toLowerCase().replace(' ', '-')}">${complaint.status || 'Pending'}</span></p>
                    </div>
                </div>
                <div class="mb-3">
                    <strong>Description:</strong>
                    <p>${complaint.description || 'No description provided'}</p>
                </div>
                ${complaint.notes ? `<div class="mb-3">
                    <strong>Admin Notes:</strong>
                    <p>${complaint.notes}</p>
                </div>` : ''}
            `;

            document.getElementById('complaintDetails').innerHTML = details;
            new bootstrap.Modal(document.getElementById('viewComplaintModal')).show();
        }

        // Edit Complaint
        function editComplaint(id) {
            const complaint = complaintsData.find(c => c.id === id);
            if (!complaint) return;

            document.getElementById('complaintId').value = id;
            document.getElementById('complaintStatus').value = complaint.status || 'Pending';
            document.getElementById('complaintNotes').value = complaint.notes || '';

            new bootstrap.Modal(document.getElementById('editComplaintModal')).show();
        }

        // Update Complaint
        function updateComplaint() {
            const id = document.getElementById('complaintId').value;
            const status = document.getElementById('complaintStatus').value;
            const notes = document.getElementById('complaintNotes').value;

            fetch(`/api/complaints/${id}`, {
                method: 'PUT',
                headers: {
                    'Content-Type': 'application/json'
                },
                body: JSON.stringify({ status, notes })
            })
            .then(res => res.json())
            .then(data => {
                if (data.success) {
                    alert('Complaint updated successfully!');
                    bootstrap.Modal.getInstance(document.getElementById('editComplaintModal')).hide();
                    loadComplaints();
                } else {
                    alert('Error updating complaint');
                }
            })
            .catch(err => {
                console.error('Error:', err);
                alert('Error updating complaint');
            });
        }

        // Delete Complaint
        function deleteComplaint(id) {
            if (!confirm('Are you sure you want to delete this complaint?')) return;

            fetch(`/api/complaints/${id}`, {
                method: 'DELETE'
            })
            .then(res => res.json())
            .then(data => {
                if (data.success) {
                    alert('Complaint deleted successfully!');
                    loadComplaints();
                } else {
                    alert('Error deleting complaint');
                }
            })
            .catch(err => {
                console.error('Error:', err);
                alert('Error deleting complaint');
            });
        }

        // Filter Complaints
        function filterComplaints() {
            const search = document.getElementById('complaintSearch').value.toLowerCase();
            const status = document.getElementById('complaintStatusFilter').value;

            const filtered = complaintsData.filter(c => {
                const matchesSearch = c.name.toLowerCase().includes(search) || 
                                     c.email.toLowerCase().includes(search) || 
                                     c.location.toLowerCase().includes(search);
                const matchesStatus = !status || c.status === status;
                return matchesSearch && matchesStatus;
            });

            displayComplaints(filtered);
        }

        // Update Complaints Stats
        function updateComplaintsStats() {
            document.getElementById('totalComplaints').textContent = complaintsData.length;
            document.getElementById('pendingComplaints').textContent = complaintsData.filter(c => (c.status || 'Pending') === 'Pending').length;
            document.getElementById('inProgressComplaints').textContent = complaintsData.filter(c => c.status === 'In Progress').length;
            document.getElementById('resolvedComplaints').textContent = complaintsData.filter(c => c.status === 'Resolved').length;
        }

        // Load Pickups
        function loadPickups() {
            fetch('/api/pickups')
                .then(res => res.json())
                .then(data => {
                    pickupsData = data;
                    displayPickups(pickupsData);
                    updatePickupsStats();
                })
                .catch(err => {
                    console.error('Error loading pickups:', err);
                    displayNoPickups();
                });
        }

        // Display Pickups
        function displayPickups(pickups) {
            const tbody = document.getElementById('pickupsList');
            if (pickups.length === 0) {
                displayNoPickups();
                return;
            }

            tbody.innerHTML = pickups.map(pickup => `
                <tr>
                    <td>#${pickup.id}</td>
                    <td>${pickup.name}</td>
                    <td>${pickup.address}</td>
                    <td>${pickup.item}</td>
                    <td>${pickup.day}</td>
                    <td>${new Date(pickup.created_at).toLocaleDateString()}</td>
                    <td><span class="status-badge status-${pickup.status.toLowerCase().replace(' ', '-')}">${pickup.status || 'Pending'}</span></td>
                    <td>
                        <div class="action-buttons">
                            <button class="btn-small btn-view" onclick="viewPickup(${pickup.id})"><i class="fas fa-eye"></i> View</button>
                            <button class="btn-small btn-update" onclick="editPickup(${pickup.id})"><i class="fas fa-edit"></i> Update</button>
                            <button class="btn-small btn-delete" onclick="deletePickup(${pickup.id})"><i class="fas fa-trash"></i> Delete</button>
                        </div>
                    </td>
                </tr>
            `).join('');
        }

        function displayNoPickups() {
            document.getElementById('pickupsList').innerHTML = `
                <tr>
                    <td colspan="8" class="text-center text-muted py-5">
                        <i class="fas fa-inbox" style="font-size: 48px; opacity: 0.3;"></i>
                        <p style="margin-top: 10px;">No pickups available</p>
                    </td>
                </tr>
            `;
        }

        // View Pickup
        function viewPickup(id) {
            const pickup = pickupsData.find(p => p.id === id);
            if (!pickup) return;

            const details = `
                <div class="row mb-3">
                    <div class="col-md-6">
                        <strong>Name:</strong>
                        <p>${pickup.name}</p>
                    </div>
                    <div class="col-md-6">
                        <strong>Address:</strong>
                        <p>${pickup.address}</p>
                    </div>
                </div>
                <div class="row mb-3">
                    <div class="col-md-6">
                        <strong>Waste Item:</strong>
                        <p>${pickup.item}</p>
                    </div>
                    <div class="col-md-6">
                        <strong>Preferred Day:</strong>
                        <p>${pickup.day}</p>
                    </div>
                </div>
                <div class="row mb-3">
                    <div class="col-md-6">
                        <strong>Date Requested:</strong>
                        <p>${new Date(pickup.created_at).toLocaleString()}</p>
                    </div>
                    <div class="col-md-6">
                        <strong>Status:</strong>
                        <p><span class="status-badge status-${pickup.status.toLowerCase().replace(' ', '-')}">${pickup.status || 'Pending'}</span></p>
                    </div>
                </div>
                ${pickup.notes ? `<div class="mb-3">
                    <strong>Driver Notes:</strong>
                    <p>${pickup.notes}</p>
                </div>` : ''}
            `;

            document.getElementById('pickupDetails').innerHTML = details;
            new bootstrap.Modal(document.getElementById('viewPickupModal')).show();
        }

        // Edit Pickup
        function editPickup(id) {
            const pickup = pickupsData.find(p => p.id === id);
            if (!pickup) return;

            document.getElementById('pickupId').value = id;
            document.getElementById('pickupStatus').value = pickup.status || 'Pending';
            document.getElementById('pickupNotes').value = pickup.notes || '';

            new bootstrap.Modal(document.getElementById('editPickupModal')).show();
        }

        // Update Pickup
        function updatePickup() {
            const id = document.getElementById('pickupId').value;
            const status = document.getElementById('pickupStatus').value;
            const notes = document.getElementById('pickupNotes').value;

            fetch(`/api/pickups/${id}`, {
                method: 'PUT',
                headers: {
                    'Content-Type': 'application/json'
                },
                body: JSON.stringify({ status, notes })
            })
            .then(res => res.json())
            .then(data => {
                if (data.success) {
                    alert('Pickup updated successfully!');
                    bootstrap.Modal.getInstance(document.getElementById('editPickupModal')).hide();
                    loadPickups();
                } else {
                    alert('Error updating pickup');
                }
            })
            .catch(err => {
                console.error('Error:', err);
                alert('Error updating pickup');
            });
        }

        // Delete Pickup
        function deletePickup(id) {
            if (!confirm('Are you sure you want to delete this pickup?')) return;

            fetch(`/api/pickups/${id}`, {
                method: 'DELETE'
            })
            .then(res => res.json())
            .then(data => {
                if (data.success) {
                    alert('Pickup deleted successfully!');
                    loadPickups();
                } else {
                    alert('Error deleting pickup');
                }
            })
            .catch(err => {
                console.error('Error:', err);
                alert('Error deleting pickup');
            });
        }

        // Filter Pickups
        function filterPickups() {
            const search = document.getElementById('pickupSearch').value.toLowerCase();
            const status = document.getElementById('pickupStatusFilter').value;

            const filtered = pickupsData.filter(p => {
                const matchesSearch = p.name.toLowerCase().includes(search) || 
                                     p.address.toLowerCase().includes(search);
                const matchesStatus = !status || p.status === status;
                return matchesSearch && matchesStatus;
            });

            displayPickups(filtered);
        }

        // Update Pickups Stats
        function updatePickupsStats() {
            document.getElementById('totalPickups').textContent = pickupsData.length;
            document.getElementById('pendingPickups').textContent = pickupsData.filter(p => (p.status || 'Pending') === 'Pending').length;
            document.getElementById('inProgressPickups').textContent = pickupsData.filter(p => p.status === 'In Progress').length;
            document.getElementById('completedPickups').textContent = pickupsData.filter(p => p.status === 'Completed').length;
        }
    </script>
</body>
</html>